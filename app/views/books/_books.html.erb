
<div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table>
 <tbody>
   <tr></tr>
  <tr>
   <th>name</th>
   <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to "Edit", edit_user_path(user), class:"btn btn-outline-secondary btn-block" %>
 </div>
 <h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
  </div>
  
  